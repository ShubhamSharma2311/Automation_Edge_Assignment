generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User table stores application users with authentication
// Demonstrates proper user management and data isolation
model User {
  id           Int          @id @default(autoincrement())
  email        String       @unique // Unique email for authentication
  password     String       // Hashed password (bcrypt)
  name         String       // User's display name
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  generations  Generation[] // One-to-many relationship

  @@index([email])
  @@map("users")
}

// Language table stores supported programming languages
// This is a lookup/reference table to normalize language data
model Language {
  id          Int          @id @default(autoincrement())
  name        String       @unique // Display name (e.g., "Python", "JavaScript")
  slug        String       @unique // URL-safe identifier (e.g., "python", "javascript")
  createdAt   DateTime     @default(now())
  generations Generation[]

  @@map("languages")
}

// Generation table stores each code generation request and result
// Foreign key relationships with User and Language tables ensure data integrity
model Generation {
  id         Int      @id @default(autoincrement())
  prompt     String   @db.Text // User's natural language prompt
  code       String   @db.Text // AI-generated code
  createdAt  DateTime @default(now())
  userId     Int      // Foreign key to User
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  languageId Int      // Foreign key to Language
  language   Language @relation(fields: [languageId], references: [id])

  // Indexes for efficient queries
  // Index on createdAt for efficient pagination and sorting
  // Index on userId for fetching user-specific generations
  // Index on languageId for efficient filtering by language
  @@index([createdAt(sort: Desc)])
  @@index([userId])
  @@index([languageId])
  @@map("generations")
}
