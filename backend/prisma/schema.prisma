generator client {
   provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Language {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  slug        String       @unique
  generations Generation[]
}

model Generation {
  id         Int      @id @default(autoincrement())
  prompt     String
  code       String   @db.Text
  createdAt  DateTime @default(now())
  languageId Int
  language   Language @relation(fields: [languageId], references: [id])
}
